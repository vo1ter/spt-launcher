<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:helpers="using:SPT.Launcher.Helpers"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SPT.Launcher.CustomControls.OnlinePlayers">
    <Border Classes="card">
            <Grid RowDefinitions="Auto,*" Margin="2"
                  Background="{DynamicResource BackgroundBrush}">
				<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
					<Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="{Binding Source={x:Static helpers:LocalizationProvider.Instance}, Path=players_online}" />
				</StackPanel>
				<StackPanel>
					<Button HorizontalAlignment="Right" VerticalAlignment="Center" Classes="icon"
                        Command="{Binding $parent[UserControl].UpdateOnlinePlayersCommand}">
						<Path Data="{StaticResource Sync}" Fill="White" />
					</Button>
				</StackPanel>
					<ScrollViewer Grid.Row="1" Height="200">
						<StackPanel x:Name="onlinePlayersList">
							
						</StackPanel>
					</ScrollViewer>
            </Grid>
        </Border>
</UserControl>
